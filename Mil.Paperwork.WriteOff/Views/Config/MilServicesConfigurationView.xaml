<UserControl x:Class="Mil.Paperwork.WriteOff.Views.Config.MilServicesConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mil.Paperwork.WriteOff.Views"
             xmlns:controls="clr-namespace:Mil.Paperwork.WriteOff.Controls"
             mc:Ignorable="d" 
             xmlns:viewModels="clr-namespace:Mil.Paperwork.WriteOff.ViewModels.Tabs"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:ServicesConfigViewModel}">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button Content="Додати службу" Command="{Binding AddNewServiceCommand}" Margin="0,0,5,0"/>
            <Button Content="Використовувати за Замовчанням" Command="{Binding MarkAsDefaultCommand}" Margin="0,0,5,0" />
            <Button Content="Видалити" Command="{Binding DeleteServiceCommand}" Margin="0,0,5,0"/>
            <Button Content="Зберегти" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="Зберегти тимчасово" Command="{Binding SaveLocalCommand}" Margin="0,0,5,0"
                ToolTip="Після перезавантаження програми або натискання кнопки 'Оновити' налаштування будуть повернені "/>
            <Button Content="Оновити" Command="{Binding RefreshCommand}" Margin="0,0,5,0"/>
            <Button Content="Закрити" Command="{Binding CloseCommand}" Margin="0,0,5,0"/>
        </StackPanel>

        <ComboBox ItemsSource="{Binding Services}"
                  DisplayMemberPath="Title"
                  DockPanel.Dock="Top"
                  SelectedItem="{Binding CurrentService}">
            <Behaviors:Interaction.Triggers>
                <Behaviors:EventTrigger EventName="SelectionChanged">
                    <Behaviors:InvokeCommandAction Command="{Binding ServiceSelectedCommand}" />
                </Behaviors:EventTrigger>
            </Behaviors:Interaction.Triggers>
        </ComboBox>

        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>


            <TextBlock Grid.Row="1" Grid.Column="1" Text="Служба (майно)"
                       VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="2"
                      ItemsSource="{Binding AssetTypes}" 
                      SelectedItem="{Binding CurrentService.AssetType}"
                      Style="{StaticResource EnumDescriptionComboBox}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Margin="5 0"/>
            
            <TextBlock Text="Опис" Grid.Row="1" Grid.Column="3"
                       VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="4" 
                     Text="{Binding CurrentService.Description}"
                     Margin="5 0"/>

        </Grid>

        <DataGrid ItemsSource="{Binding CurrentService.Parameters}" AutoGenerateColumns="False" Margin="0,5,0,0"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ідентифікатор" Binding="{Binding Name}" Width=".7*" 
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Значення" Binding="{Binding Value}" Width="*" />
                <DataGridTextColumn Header="Коментар" Binding="{Binding Comment}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
