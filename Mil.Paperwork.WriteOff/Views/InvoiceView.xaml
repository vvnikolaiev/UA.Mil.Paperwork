<UserControl x:Class="Mil.Paperwork.WriteOff.Views.InvoiceView"
             xmlns:ViewModels="clr-namespace:Mil.Paperwork.WriteOff.ViewModels.Reports" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=ViewModels:InvoiceReportViewModel}">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Накладна (вимога). Номер документу*:" FontWeight="Bold" FontSize="16"/>

            <TextBox Text="{Binding DocumentNumber}" Width="60" />

        </StackPanel>

        <Grid Grid.Row="1" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="125" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата операції*:"/>
            <!-- on date selected automaticall change DueDate (+10 days by default) -->
            <DatePicker Grid.Row="0" Grid.Column="1" 
                        x:Name="datePickerStart"
                        SelectedDate="{Binding DateCreated}"
                        DisplayDateStart="01.01.2000"
                        HorizontalAlignment="Stretch" Margin="5">
                <Behaviors:Interaction.Triggers>
                    <Behaviors:EventTrigger EventName="SelectedDateChanged">
                        <Behaviors:InvokeCommandAction Command="{Binding UpdateDueDateCommand}" />
                    </Behaviors:EventTrigger>
                </Behaviors:Interaction.Triggers>
            </DatePicker>

            <TextBlock Grid.Row="0" Grid.Column="2" Text="Дійсна, днів*:"/>
            <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                <TextBox Text="{Binding ValidDays, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Stretch">
                    <Behaviors:Interaction.Triggers>
                        <Behaviors:EventTrigger EventName="TextChanged">
                            <Behaviors:InvokeCommandAction Command="{Binding UpdateDueDateCommand}" />
                        </Behaviors:EventTrigger>
                    </Behaviors:Interaction.Triggers>
                </TextBox>

                <TextBlock Text="{Binding DueDate, StringFormat='до dd.MM.yyyy'}"
                           Margin="5 0" VerticalAlignment="Center"
                           FontStyle="Italic"/>
            </StackPanel>
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Вид операції:"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                        Text="{Binding OperationType, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="2" Text="Підстава (мета):"/>
            <TextBox Grid.Row="1" Grid.Column="3"
                        Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="3" Grid.Column="1" Text="Передає*:" FontWeight="Bold" />
            <TextBlock Grid.Row="3" Grid.Column="3" Text="Приймає*:" FontWeight="Bold" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Ім'я та прізвище*:"
                        HorizontalAlignment="Right" />
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Посада*:" 
                        HorizontalAlignment="Right" />
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Звання*:"
                        HorizontalAlignment="Right" />

            <ComboBox Grid.Row="4" Grid.Column="1"
                        ItemsSource="{Binding People}" 
                        Text="{Binding TransmitterName}"
                        DisplayMemberPath="FullName"
                        SelectedItem="{Binding SelectedTransmitter, UpdateSourceTrigger=PropertyChanged}" 
                        IsEditable="True"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                <Behaviors:Interaction.Triggers>
                    <Behaviors:EventTrigger EventName="SelectionChanged">
                        <Behaviors:InvokeCommandAction Command="{Binding TransmitterSelectedCommand}" />
                    </Behaviors:EventTrigger>
                </Behaviors:Interaction.Triggers>
            </ComboBox>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding TransmitterPosition, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TransmitterRank, UpdateSourceTrigger=PropertyChanged}"/>

            <ComboBox Grid.Row="4" Grid.Column="3"
                        ItemsSource="{Binding People}" 
                        Text="{Binding RecipientName}"
                        DisplayMemberPath="FullName"
                        SelectedItem="{Binding SelectedRecipient, UpdateSourceTrigger=PropertyChanged}" 
                        IsEditable="True"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                <Behaviors:Interaction.Triggers>
                    <Behaviors:EventTrigger EventName="SelectionChanged">
                        <Behaviors:InvokeCommandAction Command="{Binding RecipientSelectedCommand}" />
                    </Behaviors:EventTrigger>
                </Behaviors:Interaction.Triggers>
            </ComboBox>
            <TextBox Grid.Row="5" Grid.Column="3" Text="{Binding RecipientPosition, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Row="6" Grid.Column="3" Text="{Binding RecipientRank, UpdateSourceTrigger=PropertyChanged}"/>

            <DataGrid Grid.Row="7" Grid.ColumnSpan="99" 
                      x:Name="AssetsDataGrid"
                      ItemsSource="{Binding AssetsCollection}" 
                      SelectedItem="{Binding SelectedAsset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      EnableRowVirtualization="False"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      VerticalAlignment="Stretch">  
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Назва" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.ProductsSelector.Products, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            Text="{Binding Name}"
                                            SelectedValue="{Binding SelectedProductId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="AlmostUniqueID"
                                            IsEditable="True"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center">
                                    <Behaviors:Interaction.Triggers>
                                        <Behaviors:EventTrigger EventName="SelectionChanged">
                                            <Behaviors:InvokeCommandAction Command="{Binding ProductSelectedCommand}" 
                                                            CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ComboBox}}" />
                                        </Behaviors:EventTrigger>
                                    </Behaviors:Interaction.Triggers>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                        
                    <DataGridTextColumn Header="С/Н" Binding="{Binding SerialNumber}" Width="180"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="Код ном." Binding="{Binding NomenclatureCode}" Width="70"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTemplateColumn Header="Од. виміру" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.MeasurementUnits, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            Text="{Binding MeasurementUnit}"
                                            DisplayMemberPath="ShortName"
                                            IsEditable="True"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                        
                    <DataGridTextColumn Header="Кат-ія" Binding="{Binding Category}" Width="50"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="К-сть" Binding="{Binding Count}" Width="60"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="60"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Додати рядок" Command="{Binding AddRowCommand}" />
            <Button Content="Видалити рядок" Command="{Binding RemoveRowCommand }" />
            <Button Content="Згенерувати" Command="{Binding GenerateReportCommand}" />
            <Button Content="Налаштування" Command="{Binding OpenConfigurationCommand}" />
            <Button Content="Закрити" Command="{Binding CloseTabCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>